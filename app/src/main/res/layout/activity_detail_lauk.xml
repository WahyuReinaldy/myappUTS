<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailLauk"
    android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gulai"
            android:id="@+id/imglauk"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayam Gulai"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/judul" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:textSize="20sp"
            android:text="20.000"
            android:textStyle="bold"
            android:id="@+id/harga"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:text="Ayam gulai adalah salah satu masakan padang yang berkuah, kuah kental berminyak dan pedas ini pasti akan membangkitkan semangat makan anda, sedaaaap!!!"
        android:id="@+id/desc"/>









</LinearLayout>

